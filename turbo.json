{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "MASTER_KEY",
        "NEXT_PUBLIC_API_URL",
        "CORS_ORIGIN",
        "PORT"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        }
    }
}